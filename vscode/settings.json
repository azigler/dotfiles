{
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "chat.editor.fontSize": 14,
  "color-highlight.useARGB": true,
  "debug.console.fontSize": 14,
  "editor.accessibilitySupport": "off",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "SauceCodePro Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "eslint.format.enable": true,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "githubIssues.assignWhenWorking": false,
  "githubPullRequests.pullBranch": "always",
  "go.toolsManagement.autoUpdate": true,
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.orderedList.marker": "one",
  "markdown.preview.fontFamily": "SauceCodePro Nerd Font Propo",
  "mcp-companion.enableInlineButtons": false,
  "nxConsole.showNodeVersionOnStartup": false,
  "prettier.ignorePath": ".gitignore",
  "prettier.semi": false,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "scm.inputFontFamily": "editor",
  "scm.inputFontSize": 14,
  "screencastMode.keyboardOptions": {
    "showCommandGroups": true,
    "showKeys": false
  },
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.middleClickBehavior": "paste",
  "todo-tree.filtering.includeHiddenFiles": true,
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme"
}
